{
	"$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							":NODE:",
							":BLANK_LINE:",
							["react", "react/**/*", "vike", "vike/**/*", "vike-react/**/*"],
							":BLANK_LINE:",
							[":PACKAGE_WITH_PROTOCOL:"],
							":BLANK_LINE:",
							[":PACKAGE:"],
							":BLANK_LINE:",
							["@/shared/**/*"],
							":BLANK_LINE:",
							["@/entities/**/*"],
							":BLANK_LINE:",
							["@/features/**/*"],
							":BLANK_LINE:",
							["@/widgets/**/*"],
							":BLANK_LINE:",
							["@/pages/**/*"],
							":BLANK_LINE:",
							["@/app/**/*"],
							":BLANK_LINE:",
							["./**"]
						]
					}
				}
			}
		}
	}
}
